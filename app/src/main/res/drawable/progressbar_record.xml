<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置背景色（黑色） -->

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="@dimen/space_5">

            </corners>
            <solid android:color="@color/grey_dialog">

            </solid>

        </shape>

    </item>

    <!-- 设置进度条颜色（白色） -->

    <item android:id="@android:id/progress">

        <clip>
            <shape>

                <gradient
                    android:angle="45"
                    android:endColor="@color/text_green"
                    android:startColor="@color/text_green">

                </gradient>
                <corners android:radius="@dimen/space_5">

                </corners>

            </shape>

        </clip>

    </item>


</layer-list>