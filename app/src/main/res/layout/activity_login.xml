<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_100"
        android:gravity="center"
        android:text="@string/system_display"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size30" />

    <LinearLayout
        android:id="@+id/ll_login_btn"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginEnd="@dimen/space_20"
        android:background="@drawable/login_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginStart="@dimen/space_15"
            android:layout_marginTop="@dimen/space_40"
            android:layout_marginEnd="@dimen/space_15"
            android:background="@drawable/login_username_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space_25"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space_15"
                android:background="@null"
                android:hint="@string/input_username"
                android:textSize="@dimen/text_size18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginStart="@dimen/space_15"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginEnd="@dimen/space_15"
            android:background="@drawable/login_username_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space_25"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space_15"
                android:background="@null"
                android:hint="@string/input_password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_remember_username"
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space_45"
                android:background="@drawable/remember_username_bg"
                android:button="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size16"
                android:layout_marginStart="@dimen/space_10"
                android:textColor="@color/white"
                android:text="@string/remember_username"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginStart="@dimen/space_15"
            android:layout_marginEnd="@dimen/space_15"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size20"
            android:background="@drawable/login_button_bg"/>
    </LinearLayout>

</LinearLayout>