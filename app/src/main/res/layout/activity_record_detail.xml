<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.activity_repair.stand_detail.RecordDetailActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50">

        <TextView
            style="@style/item_text_style"
            android:text="@string/repair_record_name" />

        <TextView
            android:id="@+id/tv_record_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_10"
            android:gravity="center_vertical|end" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_dialog"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50">

        <TextView
            style="@style/item_text_style"
            android:text="@string/task_number" />

        <TextView
            android:id="@+id/tv_task_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_10"
            android:gravity="center_vertical|end" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_dialog"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50">

        <TextView
            style="@style/item_text_style"
            android:text="@string/repair_record_type" />

        <TextView
            android:id="@+id/tv_record_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_10"
            android:gravity="center_vertical|end" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_dialog"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50">

        <TextView
            style="@style/item_text_style"
            android:text="@string/record_person" />

        <TextView
            android:id="@+id/tv_record_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_10"
            android:gravity="center_vertical|end" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_dialog">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repair_content_title"
            style="@style/item_text_style"
            android:text="@string/task_record_time" />

        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_10"
            android:gravity="center_vertical|end" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/grey_dialog">

    </View>

    <include
        layout="@layout/item_repair_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/ry_repair_record"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40">

        <ImageView
            android:id="@+id/iv_repair_record_trumpet"
            android:paddingStart="@dimen/space_10"
            android:paddingEnd="@dimen/space_0"
            android:paddingTop="@dimen/space_10"
            android:layout_gravity="center"
            android:src="@drawable/trumpet"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30" />
        <ProgressBar
            android:id="@+id/pb_repair_record"
            android:layout_toStartOf="@+id/iv_repair_record_delete"
            android:layout_toEndOf="@+id/iv_repair_record_trumpet"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_margin="@dimen/space_10"
            android:layout_width="match_parent"
            android:progressDrawable="@drawable/progressbar_record"
            android:layout_height="@dimen/space_30" />
        <Chronometer
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/space_50"
            android:layout_marginTop="@dimen/space_10"
            android:id="@+id/cm_repair_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_repair_record_delete"
            android:src="@drawable/repair_delete"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/space_30"
            android:padding="@dimen/space_5"
            android:layout_height="@dimen/space_40" />
    </RelativeLayout>


</LinearLayout>