<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.glens.jksd.activity.activity_repair.stand_add.RepairAddGroundActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:layout_marginTop="@dimen/space_50"
                android:layout_width="@dimen/space_110"
                android:layout_height="@dimen/space_110"
                android:layout_gravity="center_horizontal"
                layout="@layout/item_ground_circle_tv"/>

            <include
                android:id="@+id/item_repair_one"
                layout="@layout/item_repair_arrow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_70"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/repair_arrow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_40"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_repair_arrow_two"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:background="@drawable/tv_circle_orange"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size10" />

                    <TextView
                        android:id="@+id/tv_repair_arrow_text_two"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/space_5"
                        android:gravity="center"
                        android:text="@string/hung"
                        android:textColor="@color/textColor" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_70"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/repair_arrow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_40"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_repair_arrow_three"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:background="@drawable/tv_circle_orange"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size10" />

                    <TextView
                        android:id="@+id/tv_repair_arrow_text_three"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/space_5"
                        android:gravity="center"
                        android:text="@string/broken"
                        android:textColor="@color/textColor" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_40"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_70"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/repair_arrow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_40"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_repair_arrow_four"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:background="@drawable/tv_circle_orange"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size10" />

                    <TextView
                        android:id="@+id/tv_repair_arrow_text_four"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/space_5"
                        android:gravity="center"
                        android:text="@string/return_back"
                        android:textColor="@color/textColor" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>