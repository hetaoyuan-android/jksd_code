<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svp_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_10">

    <ImageView
        android:id="@+id/svp_dialog_progress"
        android:layout_width="@dimen/space_30"
        android:layout_height="@dimen/space_30"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_svstatus_info" />

    <ProgressBar
        android:id="@+id/svp_dialog_progress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminateDrawable="@drawable/progress_anim_bg" />

    <TextView
        android:id="@+id/svp_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_8"
        android:text="登录中"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size16" />
</LinearLayout>