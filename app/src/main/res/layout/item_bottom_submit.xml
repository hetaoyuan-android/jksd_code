<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_70">

    <RelativeLayout
        android:id="@+id/repair_task_standard_ry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginStart="@dimen/space_15"
        android:layout_marginEnd="@dimen/space_15"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_alignParentBottom="true"
        android:background="@drawable/clt_circular_button_bg3">

        <TextView
            android:id="@+id/repair_task_standard_text"
            android:drawablePadding="@dimen/space_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/repair_standard_task_information"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>
