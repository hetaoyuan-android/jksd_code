<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_120"
    android:layout_marginStart="@dimen/space_10"
    android:layout_marginTop="@dimen/space_10"
    android:layout_marginEnd="@dimen/space_10"
    android:background="@drawable/main_bg_gridview"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/im_no_dispose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_dispose"></ImageView>

    <LinearLayout
        android:id="@+id/ll_item_no_dispose"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_80"
        android:layout_toRightOf="@id/im_no_dispose"
        android:layout_marginBottom="@dimen/space_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_no_measure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="35Kv大树线02杆-04杆"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_30"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:id="@+id/tv_no_dispose_measure_cross_type"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/step_railway"-->
                <!--android:padding="@dimen/space_3"-->
                <!--android:background="@drawable/step_railway"-->
                <!--android:textColor="@color/step_railway"-->
                <!--android:textSize="@dimen/text_size16" />-->
            <TextView
                android:id="@+id/tv_no_dispose_measure_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:layout_marginStart="@dimen/space_15"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/text_size16" />

            <View
                android:layout_width="@dimen/space_1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/space_20"
                android:background="@color/grey_hint" />

            <TextView
                android:id="@+id/tv_no_dispose_measure_depart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_20"
                android:text="监理一部"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_no_dispose_measure"
        android:layout_width="@dimen/space_70"
        android:layout_height="@dimen/space_30"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/space_20"
        android:background="@drawable/go_dispose_bg"
        android:gravity="center"
        android:text="@string/go_dispose"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size18" />
</RelativeLayout>