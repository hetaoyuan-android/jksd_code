<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_repair_information"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/space_10">

    <RelativeLayout
        android:id="@+id/ry_repair_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_30"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_repair_information_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repair_ground_manage_add"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size16" />

        <TextView
            android:id="@+id/repair_information_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/repair_person"
            android:drawablePadding="@dimen/space_5"
            android:text="@string/repair_task" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="80dp">

        <com.glens.jksd.utils.imagePick.view.MyGridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:listSelector="@color/lucency"
            android:numColumns="4"
            android:verticalSpacing="@dimen/space_5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginTop="@dimen/space_5"
        android:background="@color/grey_dialog" />
</LinearLayout>
