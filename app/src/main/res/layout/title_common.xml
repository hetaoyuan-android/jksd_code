<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/ll_common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:gravity="center_vertical"
        android:background="@color/dodgerblue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/common_title_left"
            android:layout_width="@dimen/space_50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/space_15"
            android:paddingTop="@dimen/space_15"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/common_title_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/common_title_right"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black_dialog_bg"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/common_title_rightImg"
            android:layout_width="@dimen/space_50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/space_15"
            android:paddingTop="@dimen/space_15"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>