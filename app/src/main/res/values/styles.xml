<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/title_theme</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 照相机页面 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="bottom_tag_style">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@drawable/bottom_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="svpDialogGlassStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_svp_glass</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    style="@style/rb_top_records"

    <style name="top_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@drawable/top_text_color</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="horizontal_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@drawable/top_text_color</item>
        <item name="android:padding">@dimen/space_5</item>
       <item name="android:layout_marginStart">@dimen/space_5</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
    </style>

    <style name="item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/space_50</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/space_10</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_size16</item>
    </style>

    <style name="et_item_right">
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:drawablePadding">@dimen/space_5</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:drawableEnd">@drawable/arrows_right</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="rb_top_circle">
        <item name="android:button">@null</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/circle_text_color</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_circle_select</item>
        <item name="android:layout_width">@dimen/space_80</item>
        <item name="android:layout_height">@dimen/space_80</item>
    </style>

    <style name="rb_tower_line">
        <item name="android:layout_margin">@dimen/space_10</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:textColor">@drawable/tv_tower_line</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_circle_click</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/space_0</item>
        <item name="android:layout_height">@dimen/space_30</item>
    </style>

    <style name="rb_pop_top">
        <item name="android:layout_margin">@dimen/space_10</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tv_pop_text</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_pop_select</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/space_0</item>
        <item name="android:layout_height">@dimen/space_30</item>
    </style>

    <style name="rb_pop_submit">
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:layout_marginBottom">@dimen/space_10</item>
        <item name="android:layout_marginStart">@dimen/space_20</item>
        <item name="android:layout_marginEnd">@dimen/space_20</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tv_tower_line</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_pop_submit</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/space_0</item>
        <item name="android:layout_height">@dimen/space_30</item>
    </style>


    <style name="rb_top_repair_detail">
        <item name="android:button">@null</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/bottom_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_circle_details</item>
        <item name="android:layout_width">@dimen/space_100</item>
        <item name="android:layout_height">@dimen/space_30</item>
    </style>

    <style name="rb_top_records">
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tv_repair_record</item>
        <item name="android:background">@drawable/rb_record_select</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:layout_marginBottom">@dimen/space_10</item>
        <item name="android:layout_width">@dimen/space_60</item>
        <item name="android:layout_height">@dimen/space_30</item>
    </style>

    <style name="repair_list_state">
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tv_repair_record</item>
        <item name="android:background">@drawable/tv_rectangle_grey_pop</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/space_60</item>
        <item name="android:layout_height">@dimen/space_30</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">@dimen/space_5</item>
    </style>

    //16sp,16sp,18sp

    <style name="detail_text_setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/space_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_size16</item>
    </style>

    <style name="detail_text_show">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/space_10</item>
        <item name="android:layout_marginEnd">@dimen/space_10</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size16</item>
    </style>


    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>
</resources>
